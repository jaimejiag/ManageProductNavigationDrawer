<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.manageproductsdb">

    <application
        android:name="com.example.usuario.manageproductsdb.aplications.ProductRepository"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.usuario.manageproductsdb.Login_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.usuario.manageproductsdb.AccountSettingsActivity" />
        <activity android:name="com.example.usuario.manageproductsdb.GeneralSettingsActivity" />
        <activity android:name="com.example.usuario.manageproductsdb.SignUpActivity" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name="com.example.usuario.manageproductsdb.HomeActivity" />
    </application>

</manifest>