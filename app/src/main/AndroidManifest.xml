    package="com.example.usuario.manageproductsrecycler">

    <application
        android:name=".aplications.ProductApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login_Activity">

        </activity>
        <activity android:name=".ProductsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddProduct" />
        <activity android:name=".AccountSettingsActivity" />
        <activity android:name=".GeneralSettingsActivity" />
        <activity android:name=".SignUpActivity" android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>